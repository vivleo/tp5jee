<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>FormationCRUD.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>FormationCRUDs</servlet-name>
        <servlet-class>Controller.FormationCRUDs</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormationCRUDs</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>identifier</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/GestionFormation</param-value>
    </context-param>


</web-app>